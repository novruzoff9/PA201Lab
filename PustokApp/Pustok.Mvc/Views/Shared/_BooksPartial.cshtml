@model List<Book>
@foreach (var book in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @book.Author.FullName
                </a>
                <h3>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                        @book.Name
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="~/assets/image/products/@book.MainImageUrl" alt="">
                    <div class="hover-contents">
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="hover-image">
                            <img src="~/assets/image/products/@book.HoverImageUrl" alt="">
                        </a>
                        <div class="hover-btns">
                            <a href="cart.html" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a asp-controller="books" asp-action="bookmodal" asp-route-id="@book.Id" data-bs-toggle="modal" data-bs-target="#quickModal"
                               class="single-btn bookModalIcon">
                                <i class="fas fa-eye " ></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    @if (book.DiscountPercent > 0)
                    {
                        <span class="price">£@(book.Price - (book.Price * book.DiscountPercent / 100))</span>
                        <del class="price-old">£@book.Price</del>
                        <span class="price-discount">@book.DiscountPercent%</span>
                    }
                    else
                    {
                        <span class="price">£@book.Price</span>
                    }
                </div>
            </div>
        </div>
    </div>
}
