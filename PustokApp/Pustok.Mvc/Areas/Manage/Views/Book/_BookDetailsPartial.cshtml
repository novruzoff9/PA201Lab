@model Book

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">
        <i class="fas fa-book"></i> Book Details
    </h5>
    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <!-- Left Column - Images -->
        <div class="col-md-5">
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <strong>Main Image</strong>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                    {
                        <img src="~/assets/image/products/@Model.MainImageUrl" 
                             alt="@Model.Name" 
                             class="img-fluid rounded shadow-sm mb-2" 
                             style="max-height: 250px;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white p-5">
                            <i class="fas fa-image fa-3x"></i>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.HoverImageUrl))
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <strong>Hover Image</strong>
                    </div>
                    <div class="card-body text-center">
                        <img src="~/assets/image/products/@Model.HoverImageUrl" 
                             alt="@Model.Name Hover" 
                             class="img-fluid rounded shadow-sm" 
                             style="max-height: 200px;">
                    </div>
                </div>
            }

            @if (Model.BookImages != null && Model.BookImages.Any())
            {
                <div class="card">
                    <div class="card-header bg-light">
                        <strong>Additional Images (@Model.BookImages.Count)</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var image in Model.BookImages)
                            {
                                <div class="col-6 mb-2">
                                    <img src="~/assets/image/products/@image.ImageUrl" 
                                         alt="Book Image" 
                                         class="img-thumbnail" 
                                         style="width: 100%; height: 100px; object-fit: cover;">
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Details -->
        <div class="col-md-7">
            <h3 class="mb-3">@Model.Name</h3>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th width="35%"><i class="fas fa-hashtag"></i> ID</th>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-user-edit"></i> Author</th>
                        <td>
                            <span class="badge badge-info badge-lg">@Model.Author?.FullName</span>
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-dollar-sign"></i> Price</th>
                        <td>
                            <span class="text-success font-weight-bold h5 mb-0">$@Model.Price.ToString("F2")</span>
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-percent"></i> Discount</th>
                        <td>
                            @if (Model.DiscountPercent > 0)
                            {
                                <span class="badge badge-danger">@Model.DiscountPercent% OFF</span>
                                <span class="text-muted ml-2">
                                    Final Price: <strong class="text-success">$@((Model.Price - (Model.Price * Model.DiscountPercent / 100)).ToString("F2"))</strong>
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">No Discount</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-barcode"></i> Code</th>
                        <td><code class="h6">@Model.Code</code></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-boxes"></i> Stock Status</th>
                        <td>
                            @if (Model.InStock)
                            {
                                <span class="badge badge-success">
                                    <i class="fas fa-check"></i> In Stock
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-danger">
                                    <i class="fas fa-times"></i> Out of Stock
                                </span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-star"></i> Featured</th>
                        <td>
                            @if (Model.IsFeatured)
                            {
                                <i class="fas fa-star text-warning fa-lg"></i>
                                <span class="text-muted">Yes</span>
                            }
                            else
                            {
                                <i class="far fa-star text-muted"></i>
                                <span class="text-muted">No</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-certificate"></i> New</th>
                        <td>
                            @if (Model.IsNew)
                            {
                                <span class="badge badge-primary">NEW</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                    @if (Model.BookTags != null && Model.BookTags.Any())
                    {
                        <tr>
                            <th><i class="fas fa-tags"></i> Tags</th>
                            <td>
                                @foreach (var bookTag in Model.BookTags)
                                {
                                    <span class="badge badge-secondary mr-1">@bookTag.Tag.Name</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card mt-3">
                    <div class="card-header bg-light">
                        <strong><i class="fas fa-align-left"></i> Description</strong>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="modal-footer">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Edit Book
    </a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
        <i class="fas fa-times"></i> Close
    </button>
</div>
