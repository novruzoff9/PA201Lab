@model List<Slider>
@{
    ViewData["Title"] = "Slider List";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Slider Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Slider
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Button Text</th>
                        <th>Button URL</th>
                        <th>Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var slider in Model)
                    {
                        <tr>
                            <td>@slider.Id</td>
                            <td>
                                <img src="~/assets/image/bg-images/@slider.ImageUrl" alt="@slider.Title" class="img-thumbnail" style="width: 120px; height: 70px; object-fit: cover;" />
                            </td>
                            <td>@slider.Title</td>
                            <td>
                                @if (slider.Description.Length > 50)
                                {
                                    @slider.Description.Substring(0, 50)<text>...</text>
                                }
                                else
                                {
                                    @slider.Description
                                }
                            </td>
                            <td>@slider.ButtonText</td>
                            <td>
                                <a href="@slider.ButtonUrl" target="_blank" class="text-primary">@slider.ButtonUrl</a>
                            </td>
                            <td><span class="badge bg-warning">@slider.Order</span></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="javascript:void(0);" data-id="@slider.Id" class="btn btn-sm btn-info viewDetails" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-sm btn-warning" title="Update">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-sm btn-danger deleteSlider" title="Delete" >
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No sliders found. <a asp-action="Create" class="alert-link">Create one now</a>.
        </div>
    }
</div>

<!-- Modal for Slider Details -->
<div class="modal fade" id="sliderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="sliderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="sliderDetailsContent">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // View Details with Modal
            $('.viewDetails').on('click', function(e) {
                e.preventDefault();
                var sliderId = $(this).data('id');
                var url = '@Url.Action("Details", "Slider")' + '/' + sliderId;
                
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(data) {
                        $('#sliderDetailsContent').html(data);
                        $('#sliderDetailsModal').modal('show');
                    },
                    error: function() {
                        Swal.fire("Error!", "Could not load slider details.", "error");
                    }
                });
            });

            // Delete Slider
            $('.deleteSlider').on('click', function(e) {
                e.preventDefault();
                var link = $(this).attr('href');
                Swal.fire({
                    title: "Do you want to delete this slider?",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    denyButtonText: `Don't delete`
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(link)
                            .then(res => {
                                console.log(res)
                                console.log(res.ok)
                                if(res.ok) {
                                    Swal.fire("Deleted!", "", "success").then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire("Error!", "Could not delete the slider.", "error");
                                }
                            })
                    }
                });
            });
        });
    </script>
}
