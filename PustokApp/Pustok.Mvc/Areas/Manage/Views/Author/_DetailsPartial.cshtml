@model Author

<div class="modal-header">
    <h5 class="modal-title">
        <i class="fas fa-user-circle"></i> Author Details
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row mb-3">
        <div class="col-md-4">
            <strong><i class="fas fa-hashtag"></i> ID:</strong>
        </div>
        <div class="col-md-8">
            @Model.Id
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <strong><i class="fas fa-user"></i> Full Name:</strong>
        </div>
        <div class="col-md-8">
            @Model.FullName
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <strong><i class="fas fa-book"></i> Total Books:</strong>
        </div>
        <div class="col-md-8">
            <span class="badge badge-primary">@(Model.Books?.Count ?? 0)</span>
        </div>
    </div>
    
    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="row">
            <div class="col-12">
                <strong><i class="fas fa-list"></i> Books by this Author:</strong>
                <ul class="list-group mt-2">
                    @foreach (var book in Model.Books)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @book.Name
                            <span class="badge badge-success badge-pill">$@book.Price</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            <i class="fas fa-exclamation-triangle"></i> This author has no books yet.
        </div>
    }
</div>
<div class="modal-footer">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="fas fa-edit"></i> Edit Author
    </a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">
        <i class="fas fa-times"></i> Close
    </button>
</div>
