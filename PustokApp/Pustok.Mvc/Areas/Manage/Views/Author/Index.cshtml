@model List<Author>
@{
    ViewData["Title"] = "Author Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Author Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Author
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Books Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@author.Id</td>
                            <td>@author.FullName</td>
                            <td>
                                <span class="badge bg-warning">@(author.Books?.Count ?? 0) Books</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="javascript:void(0);" data-id="@author.Id" class="btn btn-sm btn-info viewDetails" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@author.Id" class="btn btn-sm btn-warning" title="Update">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-sm btn-danger deleteAuthor" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No authors found. <a asp-action="Create" class="alert-link">Create one now</a>.
        </div>
    }
</div>

<!-- Modal for Author Details -->
<div class="modal fade" id="authorDetailsModal" tabindex="-1" role="dialog" aria-labelledby="authorDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="authorDetailsContent">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // View Details with Modal
            $('.viewDetails').on('click', function(e) {
                e.preventDefault();
                var authorId = $(this).data('id');
                var url = '@Url.Action("Details", "Author")' + '/' + authorId;
                
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function(data) {
                        $('#authorDetailsContent').html(data);
                        $('#authorDetailsModal').modal('show');
                    },
                    error: function() {
                        Swal.fire("Error!", "Could not load author details.", "error");
                    }
                });
            });

            // Delete Author
            $('.deleteAuthor').on('click', function(e) {
                e.preventDefault();
                var link = $(this).attr('href');
                Swal.fire({
                    title: "Do you want to delete this author?",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    denyButtonText: `Don't delete`
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(link)
                            .then(res => {
                                console.log(res)
                                console.log(res.ok)
                                if(res.ok) {
                                    Swal.fire("Deleted!", "", "success").then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire("Error!", "Could not delete the author.", "error");
                                }
                            })
                    } 
                });
            });
        });
    </script>
}}